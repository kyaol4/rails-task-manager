<div class="container">
  <div class="d-flex justify-content-between">
    <h1><%= @task.title %></h1>
    <%= link_to 'edit', edit_task_path, class: 'btn btn-light mb-2' %>
  </div>
  <div class="details ps-3">
    <%= @task.details %>
  </div>
  <p><% if @task.completed %>
          <i class="far fa-check-square"></i> This task is completed
        <% else %>
          <i class="far fa-square"></i> This task is not completed yet
        <% end %></p>

  <%= link_to 'back to list', tasks_path %>
</div>
