<div class="container">
  <div class="d-flex justify-content-between">
    <h1 class="flex-grow-1"><%= @task.title %></h1>
    <%= link_to task_path(@task), method: :delete, data: { confirm: "Are you sure to delete #{@task.title}?"} do%>
      <i class="fas fa-trash-alt"></i>
    <% end %>
    <%= link_to 'edit', edit_task_path, class: 'btn btn-light mb-2' %>
  </div>
  <div class="details ps-3">
    <%= @task.details %>
  </div>
  <p><% if @task.completed %>
          <i class="far fa-check-square"></i> This task is completed
        <% else %>
          <i class="far fa-square"></i> This task is not completed yet
        <% end %></p>

  <%= link_to 'back to list', tasks_path %>
</div>
